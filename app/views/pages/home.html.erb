<div class="container">
    <div class="row">
      <div class="col-md-4 offset-md-4">
        <%# <h2 class="text-center text-dark">Login Form</h2> %>
            <div class="card my-5">
              <div class="card-body cardbody-color p-lg-3">
                <% if current_user %>
                <%= image_tag(current_user.avatar_url, class: "rounded-circle") %>
                <h6> <%= current_user.email %></h6>
                <%= link_to "Sign Out", destroy_user_session_path, data: {turbo: "false"}, method: :delete %>

                <% else %>
                <p> You are not sign in </p>
                <%= link_to "Sign Up", new_user_registration_path %>
                <br />
                <%= link_to "Log IN", new_user_session_path %>
                <br />  
                <% end %>
                
              </div>
            </div>
      </div>
    </div>
</div>



